parse arg parm "DD=" ddname . ,
             1 "CMD=" cmd .
fls_rc = 0
address flsexec "SYSCMD CMD("cmd") CMDMSG(CMDMSG.)"
if rc > 0 then do
    say "OMCFlash Error: " || FLSEXEC_MSG
    fls_rc = 8
  end
  else do
    address mvs "execio "cmdmsg.0" diskw "ddname" (stem cmdmsg."
  end
return fls_rc
